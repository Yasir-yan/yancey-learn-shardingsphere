<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yancey.learn.dao.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.yancey.learn.model.User">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="city_id" property="cityId" jdbcType="INTEGER"/>
        <result column="sex" property="sex" javaType="java.lang.Integer"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="email" property="email" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, city_id, sex, phone, email, create_time, password
    </sql>

    <insert id="insert" parameterType="com.yancey.learn.model.User">
        INSERT INTO t_user(name,phone,email,city_id,sex,password)
        VALUES
        (
        #{name},#{phone},#{email},#{cityId},#{sex},#{password}
        )
    </insert>

    <select id="get" parameterType="long" resultType="com.yancey.learn.model.User">
        select
        <include refid="Base_Column_List"/>
        from t_user where id = #{id}
    </select>

    <select id="getParam" parameterType="com.yancey.learn.model.User" resultType="com.yancey.learn.model.User">
        select
        <include refid="Base_Column_List"/>
        from t_user
        <where>
            <if test="name != null">
                AND name = #{name}
            </if>
            <if test="phone != null">
                AND phone = #{phone}
            </if>
            <if test="email != null">
                AND email = #{email}
            </if>
            <if test="cityId != null">
                AND city_id = #{cityId}
            </if>
            <if test="sex != null">
                AND sex = #{sex}
            </if>
            <if test="password != null">
                AND password = #{password}
            </if>
        </where>
        order by id desc
    </select>

    <update id="update" parameterType="com.yancey.learn.model.User">
        update t_user
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="cityId != null">
                city_id = #{cityId},
            </if>
            <if test="sex != null">
                sex = #{sex},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
        </set>
        where id = #{id}
    </update>
</mapper>